information#this-page-info(data-type="page-about",data-theme=page.main_color)

.gm-title
    h1= page.title
    .desc.t-1.fs-sm.c-t2= page.descr || '你没法了解我的全部，但我很开心能被你所了解'

.content-area
    .mb-4
        .thumbnail 
            img.lazy-load.img-cover(alt="cover image", 
            data-src=url_for(page.cover||`/img/p/about.webp`))
        //- 文章
        article#article!= page.content
    if page.comments && theme.comment.type
        .a-comment.content-main.mb-5 
            .comment-header 
                i(class=icons('icon-park-outline:comment','after.min.css'))
                span="评论"
            .comment-main 
                #gcomment 
                    .loading 
                        .loading-spinner 
                            div 
                            div 
                            div 
                        .loading-notice="正在加载评论组件..."